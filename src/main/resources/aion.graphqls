    solution: String #ByteArrayWrapper
    hash: String #Hash256
    parentHash: String #Hash256
    nonce: BigInteger
    difficulty: BigInteger
    totalDifficulty: BigInteger
    minerAddress: String #Address
    stateRoot: String #Hash256
    txTrieRoot: String #Hash256
    size: Int
    txDetails: [TxDetails]
    blockTime: Long
}


